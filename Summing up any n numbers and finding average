#include <stdio.h>

int main() {
   int n, i;
   float sum = 0.0, num, avg;

   printf("Enter the value of n: ");
   scanf("%d", &n);

   for (i = 1; i <= n; i++) {
      printf("Enter number %d: ", i);
      scanf("%f", &num);
      sum += num;
   }

   avg = sum / n;
   printf("The sum of the entered numbers is: %.2f\n", sum);
   printf("The average of the entered numbers is: %.2f\n", avg);

   return 0;
}
