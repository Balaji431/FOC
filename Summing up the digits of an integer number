#include <stdio.h>

int main() {
    int num, sum = 0, remainder;

    printf("Enter an integer number: ");
    scanf("%d", &num);

    while (num != 0) {
        remainder = num % 10;
        sum += remainder;
        num /= 10;
    }

    printf("Sum of digits in %d is %d", num, sum);

    return 0;
}
