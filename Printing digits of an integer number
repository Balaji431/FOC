#include <stdio.h>

int main() {
    int num, digit;
    
    printf("Enter a number: ");
    scanf("%d", &num);
    
    printf("The digits in %d are: ", num);
    
    // loop through each digit of the number
    while (num > 0) {
        digit = num % 10; // get the last digit
        num /= 10; // remove the last digit
        
        printf("%d ", digit); // print the digit
    }
    
    return 0;
}
